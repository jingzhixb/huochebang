<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.zhuye.huochebangsiji.widget.RoundedCornerImageView
            android:layout_width="46dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/face"
            android:scaleType="centerCrop"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/name"
            android:layout_marginLeft="10dp"
            android:textColor="#666"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张师傅"/>

        <TextView
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name"
            android:id="@+id/lianxifangshi"
            android:layout_marginLeft="10dp"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张师傅"/>

        <TextView
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
      android:layout_marginRight="16dp"
            android:id="@+id/state"
            android:layout_marginLeft="10dp"
            android:textColor="#4eac59"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代付款"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/start"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑州"/>

        <ImageView
            android:src="@drawable/arrive_1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/end"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郑州"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/chechang"
              android:textSize="14sp"
              android:textColor="#666666"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="6.8米"
              />
          <TextView
              android:id="@+id/chexing"
              android:layout_marginLeft="10dp"
              android:textSize="14sp"
              android:textColor="#666666"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="高栏"
              />
          <TextView
              android:id="@+id/zhonglei"
              android:layout_marginLeft="16dp"
              android:textSize="14sp"
              android:textColor="#666666"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="普货"
              />
      </LinearLayout>


        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/jine"
            android:textSize="12sp"
            android:textColor="#e03636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            />
        <TextView
            android:id="@+id/jine"
            android:layout_alignParentRight="true"
            android:textSize="22sp"
            android:textColor="#e03636"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6554512"
            />
    </RelativeLayout>


    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"></View>


    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <Button
           android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/shanchu"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/yaoqing_shape"
            android:textSize="14sp"
            android:textColor="#0ba8ef"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除订单"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/quxiao2"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/yaoqing_shape"
            android:textSize="14sp"
            android:textColor="#0ba8ef"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="上传过磅单"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/typewaitqueren"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/querena"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dingdan_shape"
                android:textSize="14sp"
                android:textColor="#fff"
                android:text="确认价格"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/quxiao"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/querena"
                android:layout_centerVertical="true"
                android:background="@drawable/yaoqing_shape"
                android:textSize="14sp"
                android:textColor="#0ba8ef"
                android:text="取消订单"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/typeyifukuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:visibility="gone"
                android:id="@+id/querensongda"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dingdan_shape"
                android:textSize="14sp"
                android:textColor="#fff"
                android:text="确认送达"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/qiehoudan"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/querensongda"
                android:layout_centerVertical="true"
                android:background="@drawable/yaoqing_shape"
                android:textSize="14sp"
                android:textColor="#0ba8ef"
                android:text="上传卸货单"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/fahuodan"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/qiehoudan"
                android:layout_centerVertical="true"
                android:background="@drawable/yaoqing_shape"
                android:textSize="14sp"
                android:textColor="#0ba8ef"
                android:text="上传裝货单"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/typedengdai"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/yaoqing_dengdaishape"
                android:textSize="14sp"
                android:textColor="#fff"
                android:text="等待对方付款"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </RelativeLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"></View>
    </RelativeLayout>








</LinearLayout>