<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/tou"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="注册"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tou2"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tou"
        android:layout_marginTop="50dp"
        android:layout_width="232dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333"
            android:textSize="13sp"
            android:background="@null"
            android:hint="姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#ccc"
            android:textSize="13sp"
            android:gravity="start"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/name"
            android:hint="输入姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tou3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tou2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/me"
            android:layout_width="232dp"
            android:layout_height="1dp" />
    </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/tou4"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tou3"
        android:layout_width="232dp"
        android:layout_height="74dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:background="@null"
            android:hint="个人照片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.zhuye.huochebanghuozhu.widget.RoundedCornerImageView
            android:scaleType="centerCrop"
            android:src="@drawable/head"
            android:layout_alignParentRight="true"
            android:id="@+id/touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tou5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tou4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/me"
            android:layout_width="232dp"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tou6"
        android:layout_below="@+id/tou5"
        android:layout_width="232dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shen"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/shen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/shenfenzhen"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/front"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="79dp" />
                <TextView
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="上传身份证正面"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/shenfenfan"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/fanmian"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="79dp" />
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="上传身份证反面"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tou7"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tou6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/me"
            android:layout_width="232dp"
            android:layout_height="1dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:id="@+id/tou8"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tou7"
        android:layout_width="232dp"
        android:layout_height="81dp">
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#333"
            android:textSize="13sp"
            android:background="@null"
            android:hint="公司营业执照"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            android:layout_alignParentRight="true"
            android:id="@+id/zhizhao"
            android:layout_width="90dp"
            android:layout_height="60dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/tou11"
        android:layout_below="@+id/tou8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="55dp"
            android:src="@drawable/gouxuan_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gongsi"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:text="公司"
            android:textSize="14sp"/>

        <ImageView
            android:layout_marginLeft="55dp"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geren"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:text="个人"
            android:textSize="14sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tou9"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tou11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/me"
            android:layout_width="232dp"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/tou9"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/next"
            android:text="下一步"
            android:background="@drawable/btn_shape"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="232dp"
            android:layout_height="41dp" />
    </RelativeLayout>

</RelativeLayout>
