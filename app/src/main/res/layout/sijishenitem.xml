<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
android:gravity="center_vertical"
    android:layout_height="80dp">
    
    <com.zhuye.huochebang.wodiget.RoundedCornerImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/tou"/>

    <TextView
        android:textColor="#333"
        android:textSize="15sp"
        android:layout_marginLeft="11dp"
        android:gravity="center_vertical"
        android:text="张师傅"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/tou"/>

    <Button
        android:background="@drawable/refuse_shape"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="#1db0f3"
        android:layout_alignParentRight="true"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:id="@+id/refuse"
        android:text="拒绝"
        android:textSize="13sp"
        />

    <Button
        android:layout_toLeftOf="@+id/refuse"
        android:background="@drawable/agree_shape"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_width="81dp"
        android:layout_height="27dp"
        android:id="@+id/agreeaa"
        android:text="同意"
        android:textSize="13sp"
        />

    <View
        android:layout_marginLeft="16dp"
        android:background="#dedede"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"></View>

</RelativeLayout>