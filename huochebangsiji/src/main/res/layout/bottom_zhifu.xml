<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">


    <TextView
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#666"
        android:id="@+id/kanfei"
        android:text="查看信息所需费用"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#666"
            android:id="@+id/jiege"
            android:text="查看信息所需费用"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/close"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/yuea"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/balance"/>
        <TextView
            android:id="@+id/yue1"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv1"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="余额"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:visibility="gone"
            android:id="@+id/yueaaa"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/yue1"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="10元"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
android:id="@+id/xuanyue"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/jifen"
        android:layout_width="match_parent"
        android:layout_height="42dp">


        <ImageView
            android:id="@+id/iv2"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/integral"/>

        <TextView
            android:id="@+id/jifen11"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv2"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="积分"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:visibility="gone"
            android:id="@+id/jifen22"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/jifen11"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="12"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
android:id="@+id/xuanjifen"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/alipay"
        android:layout_width="match_parent"
        android:layout_height="42dp">


        <ImageView
            android:id="@+id/iv3"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lipay"/>

        <TextView

            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv3"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="支付宝"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
android:id="@+id/xuanalipay"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="42dp">


        <ImageView
            android:id="@+id/iv4"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechatpay"/>

        <TextView

            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv4"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="微信"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
android:id="@+id/xuanweixin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
