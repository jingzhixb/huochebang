<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/back_pay_siji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="支付"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="45dp">

        <TextView
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#666"
            android:id="@+id/pay_siji"
            android:text="需支付"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:textColor="#1db0f3"
            android:id="@+id/price_siji"
            android:text="100元"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/alipay"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lipay"/>

        <TextView

            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv3"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="支付宝"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/xuanalipay"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:id="@+id/weixin"
        android:layout_width="match_parent"
        android:layout_height="42dp">


        <ImageView
            android:id="@+id/iv4"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechatpay"/>

        <TextView

            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/iv4"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#666"
            android:text="微信"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/xuanweixin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/gouxuan_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">

        <Button
            android:id="@+id/btn_pay"
            android:background="@drawable/agree_shape"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_centerInParent="true"
            android:text="确定"
            android:layout_width="325dp"
            android:layout_height="40dp" />
    </RelativeLayout>


</LinearLayout>