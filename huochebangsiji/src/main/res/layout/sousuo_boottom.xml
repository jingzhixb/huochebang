<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="#999"
        android:text="空车"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:background="@drawable/select_shape"
            android:text="全部车辆"
            android:textColor="#4bde94"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:background="@drawable/selectnormal_shape"
            android:layout_marginLeft="12dp"
            android:text="只看空车"
            android:textColor="#999"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="#999"
        android:text="车长(米，可多选)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chechang"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="#999"
        android:text="车型"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chexing"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/querena_shape"
            android:textColor="#1db0f3"
            android:textSize="16sp"
            android:text="确定"
            android:layout_width="345dp"
            android:layout_height="40dp" />
        
    </RelativeLayout>
</LinearLayout>
