<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerInside"
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />
        <TextView
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:text="我的订单"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>




    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:background="#fff"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#0ba8ef"
        app:stl_indicatorThickness="2dp"
        app:stl_indicatorWidth="20dp"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_dividerColor="#00ffffff"
        app:stl_underlineColor="#00ffffff"
        app:stl_defaultTabTextAllCaps="false"
        app:stl_defaultTabTextColor="#999"
        app:stl_defaultTabTextSize="14sp"
        app:stl_defaultTabTextHorizontalPadding="0dp"
        app:stl_defaultTabTextMinWidth="65dp"
        app:stl_distributeEvenly="false"
        app:stl_clickable="true"
        app:stl_titleOffset="100dp"
        app:stl_drawDecorationAfterTab="false"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
