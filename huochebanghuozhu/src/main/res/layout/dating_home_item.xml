<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <RelativeLayout
       android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.zhuye.huochebanghuozhu.widget.RoundedCornerImageView
            android:id="@+id/touxing"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        <RelativeLayout
            android:id="@+id/rv1"
            android:layout_toRightOf="@+id/touxing"
           android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"/>

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/state"
                android:textSize="12sp"
                android:textColor="#4bde94"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出车中"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rv1"
            android:layout_toRightOf="@+id/touxing"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="24dp">
            <TextView
                android:id="@+id/chepai"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/chepai"
                android:gravity="center_vertical"
                android:id="@+id/chexing"
                android:textSize="12sp"
                android:textColor="#4bde94"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="车牌号"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/phone"
                android:src="@drawable/ihone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                />
        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>