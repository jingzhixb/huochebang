    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:textColor="#ccc"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">


