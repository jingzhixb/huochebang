<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/tou"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="手机号验证"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_marginBottom="33dp"
            android:layout_marginTop="26dp"
            android:layout_centerInParent="true"
            android:src="@drawable/iphone"
            android:scaleType="centerCrop"
            android:layout_width="66dp"
            android:layout_height="123dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请验证您的手机号以进行下一步操作"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#333333"/>



    <RelativeLayout
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:clickable="false"
            android:textSize="15sp"
            android:textColor="#333"
            android:background="@null"
            android:id="@+id/shoujihao"
           android:layout_marginLeft="16dp"
            android:text="15812313215"
            style="@style/editstyle"
            android:layout_width="236dp"
            android:layout_height="51dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginTop="17dp"
            android:src="@drawable/go_in"
            android:layout_marginRight="48dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="16dp"
            android:background="#ddd"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/me"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textSize="15sp"
            android:textColor="#333"
            android:background="@null"
            android:id="@+id/yanzhengm"
            android:layout_marginLeft="16dp"
            android:hint="请输入6位数验证码"
            style="@style/editstyle"
            android:layout_width="236dp"
            android:layout_height="51dp" />
        <TextView
            android:textColor="#0ba8ef"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:id="@+id/huaquyanzhengma"
            android:layout_centerInParent="true"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="51dp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/zhecu"
            android:text="下一步"
            android:background="@drawable/agree_shape"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="345dp"
            android:layout_height="45dp" />
    </RelativeLayout>



</LinearLayout>
